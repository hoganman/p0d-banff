#-------------------------------------------------------------------
#                              GEANT
#-------------------------------------------------------------------
# GEANT headers and libraries
#

ifeq ($(strip $(T2KREWEIGHT_OPTION_ENABLE_GEANT)),YES)

# GEANT headers and libraries

  GEANT_LIBRARIES = -L$(GEANTRW) -lGEANTReWeight
  GEANT_INCLUDES  = -I$(GEANTRW)

