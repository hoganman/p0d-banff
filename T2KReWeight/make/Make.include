#-------------------------------------------------------------------
#                              Tracker File
#-------------------------------------------------------------------
# Tracker headers and libraries
#

ifeq ($(strip $(T2KREWEIGHT_OPTION_ENABLE_TRACKERFILE)),YES)

# Tracker file headers and libraries

